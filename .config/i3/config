set $bg-color                 #6272A4
set $in-border-color    #44475A
set $in-bg-color        #44475A
set $text-color               #F8F8F2
set $unfocused-text-color     #BFBFBF
set $urgent-border-color      #44475A
set $urgent-bg-color          #FF5555
set $placeholder-border-color #282A36
set $placeholder-bg-color     #282A36

# class                 border        bground     text        indicator child_border
client.focused          $border-color $bg-color   $text-color $bg-color   $border-color
client.focused_inactive $in-border-color $in-bg-color $text-color $in-bg-color  $in-border-color
client.unfocused        $placeholder-border-color $placeholder-bg-color $unfocused-text-color $placeholder-bg-color $placeholder-border-color
client.urgent           $urgent-border-color $urgent-bg-color $text-color $urgent-bg-color  $urgent-border-color
client.placeholder      $placeholder-border-color $placeholder-bg-color $unfocused-text-color $placeholder-bg-color $placeholder-border-color

client.background       $text-color

# Start i3bar to display a workspace bar (plus the system information i3status if available)
bar {
	i3bar_command i3bar
	status_command i3status
	position bottom

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
	tray_output primary
#	tray_output eDP1

	bindsym button4 nop
	bindsym button5 nop
#   font xft:URWGothic-Book 11
	strip_workspace_numbers yes

    colors {
        background $placeholder-bg-color
    	statusline $text-color
	separator  $in-border-color

	focused_workspace  $in-border-color $in-bg-color $text-color
	active_workspace   $placeholder-bg-color $in-bg-color $text-color
	inactive_workspace $placeholder-border-color $placeholder-bg-color $unfocused-text-color
	urgent_workspace   $urgent-bg-color $urgent-bg-color $text-color
	binding_mode       $urgent-bg-color $urgent-bg-color $text-color
    }
}

